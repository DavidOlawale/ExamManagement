@model ExamManagement.ViewModels.StudentRegisterViewModel;
@{ 
    Layout = "_AccountLayout";
    ViewBag.Title = "Register";
}
<div class="m-auto" style="margin-top: 3rem !important;">
    <h2 class="font-weight-bolder">Enroll in a course</h2>

    <form method="post" class="mt-4" asp-antiforgery="true">
        <div class="form-group text-danger" asp-validation-summary="All"></div>

        <div class="form-group">
            <label asp-for="Student.FirstName" class=""></label>
            <input asp-for="Student.FirstName" required  class="form-control form-control-solid" />
        </div>

        <div class="form-group">
            <label asp-for="Student.LastName" class=""></label>
            <input asp-for="Student.LastName" required class="form-control form-control-solid" />
        </div>


        <div class="form-group">
            <label asp-for="Student.Email">Email</label>
            <input asp-for="Student.Email" required class="form-control form-control-solid" />
        </div>

        <div class="form-group">
            <label asp-for="CourseId"></label>
            <select asp-for="CourseId" asp-items="Model.CourseSelectList" class="form-control  form-control-solid"></select>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" required class="form-control  form-control-solid" />
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword" class=""></label>
            <input asp-for="ConfirmPassword" required class="form-control form-control-solid" />
        </div>

        <div class="form-group">
            <button class="btn btn-primary"> Regiter</button>
        </div>
    </form>
</div>