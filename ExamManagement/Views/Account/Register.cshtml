@model ExamManagement.ViewModels.StudentRegisterViewModel;
@{ 
    Layout = "_AccountLayout";
    ViewBag.Title = "Register";
}
<div class="m-auto" style="margin-top: 3rem !important;">
    <h2 class="font-weight-bolder">Enroll in a course</h2>

    <form method="post" class="mt-4" asp-antiforgery="true">
        <div class="form-group text-danger" asp-validation-summary="All"></div>

        <div class="form-group row">
            <label asp-for="Student.FirstName" class="col-sm-4"></label>
            <input asp-for="Student.FirstName"  class="form-control form-control-solid col-sm-8" />
        </div>

        <div class="form-group row">
            <label asp-for="Student.LastName" class="col-sm-4"></label>
            <input asp-for="Student.LastName" class="form-control form-c form-control-solid col-sm-8" />
        </div>


        <div class="form-group row">
            <label asp-for="Student.Email" class="col-sm-4">Email</label>
            <input asp-for="Student.Email" required type="email" class="form-control form-control-solid col-sm-8" />
        </div>

        <div class="form-group row">
            <label asp-for="CourseId" class="col-sm-4"></label>
            <select asp-for="CourseId" asp-items="Model.CourseSelectList" class="form-control  form-control-solid col-sm-8"></select>
        </div>

        <div class="form-group row">
            <label asp-for="Password" class="col-sm-4"></label>
            <input asp-for="Password" class="form-control  form-control-solid col-sm-8" />
        </div>

        <div class="form-group row">
            <label asp-for="ConfirmPassword" class="col-sm-4"></label>
            <input asp-for="ConfirmPassword"  class="form-control form-control-solid col-sm-8" />
        </div>

        <div class="form-group">
            <button class="btn btn-primary"> Regiter</button>
        </div>
    </form>
</div>


<partial name="_ValidationScriptsPartial" />