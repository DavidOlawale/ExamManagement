@model ExamManagement.ViewModels.SignInModel;
@{ 
    Layout = "_AccountLayout";
    ViewBag.Title = "Sing In";
}
<div class="m-auto">
    <h2 class="font-weight-bolder">welcome to my app</h2>
    <span class="font-weight-bold text-muted">Dont have an account? <a href="#">Sign Up</a></span>

    <form method="post" class="mt-4" asp-action="SignIn" asp-antiforgery="true">
        <div class="form-group text-danger" asp-validation-summary="All"></div>
        <div class="form-group">
            <label class="">Emal</label>
            <input asp-for="Email" class="form-control form-control-lg form-control-solid" type="email"  />
        </div>

        <div class="form-group">
            <label class="">Password</label>
            <input asp-for="Password" class="form-control form-control-lg form-control-solid" type="password" />
        </div>

        <div class="form-group">
            <button class="btn btn-primary btn-lg">Sign In</button>
        </div>
    </form>
</div>