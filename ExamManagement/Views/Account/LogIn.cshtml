
@model ExamManagement.ViewModels.SignInViewModel;
@{ 
    Layout = "_AccountLayout";
    ViewBag.Title = "Sign In";
}
<div class="m-auto">
    <h2 class="font-weight-bolder">welcome to my app</h2>
    <span class="font-weight-bold text-muted">Dont have an account? <a asp-controller="Account" asp-action="Register">Enroll Now</a></span>

    <form method="post" class="mt-4" asp-antiforgery="true">
        <div class="form-group text-danger" asp-validation-summary="All"></div>
        <div class="form-group">
            <label class="">Email</label>
            <input asp-for="Email" class="form-control form-control-lg form-control-solid"  />
        </div>

        <div class="form-group">
            <label class="">Password</label>
            <input asp-for="Password" class="form-control form-control-lg form-control-solid" />
        </div>

        <div class="form-group">
            <button class="btn btn-primary btn-lg">
                <i class="menu-icon flaticon-logout"></i>
                Sign In
            </button>
        </div>
    </form>
</div>