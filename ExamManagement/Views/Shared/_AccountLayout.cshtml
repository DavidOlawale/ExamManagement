<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExamManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="/assets/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .side {
            padding: 0;
            min-height: 100vh;
            background: url('/Images/education.jpg') ;
            background-size: cover;
        }
        .side-cover {
            background: rgba(255,0,0,0.2);
            height: 100vh;
            width: 100%;
        }
    </style>
</head>
<body style="margin-bottom: 0!important">
    <div class="container-fluid">
        <div class="row align">
            <div class="d-none d-md-block col-md-6 h-100 side" >
                <div class="side-cover"></div>
            </div>
            <div class="row col-12 col-md-6 flex-grow-1 h-100" style="min-height: 100vh">
                @RenderBody()
            </div>
        </div>
    </div>


    <script src="/assets/plugins/global/plugins.bundle.js"></script>

    <partial name="_ValidationScriptsPartial" />
    <partial name="_ToastNotificationPartial" />
</body>
</html>